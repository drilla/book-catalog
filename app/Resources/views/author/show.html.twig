{% extends 'layout/base.html.twig' %}

{% block content %}
    <h1>Author</h1>

    <table class="table table-dark">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ author.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ author.name }}</td>
            </tr>
            <tr>
                <th>Birthdate</th>
                <td>{% if author.birthDate %}{{ author.birthDate|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Gender</th>
                <td>{{ author.gender }}</td>
            </tr>
        </tbody>
    </table>


            <a class="btn btn-outline-light" href="{{ path('author_index') }}">Back to the list</a>

            <a class="btn btn-outline-light" href="{{ path('author_edit', { 'id': author.id }) }}">Edit</a>
            <div class="d-inline-block">
                    {{ form_start(delete_form) }}
                        <input class="btn btn-outline-light" type="submit" value="Delete">
                    {{ form_end(delete_form) }}
            </div>
{% endblock %}

{% extends 'layout/base.html.twig' %}

{% block content %}
    <h1>Book</h1>

    <table class="table-dark table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ book.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ book.name }}</td>
        </tr>
        <tr>
            <th>Publicationdate</th>
            <td>{{ book.publicationDate|date('Y-m-d') }}</td>
        </tr>
        <tr>
            <th>Catalogdate</th>
            <td>{{ book.catalogDate|date('Y-m-d') }}</td>
        </tr>
        <tr>
            <th>Rating</th>
            <td>{{ book.rating }}</td>
        </tr>
        <tr>
            <th>Genre</th>
            <td>{{ book.genre.name }}</td>
        </tr>
        <tr>
            <th>Author</th>
            <td>{{ book.author.name }}</td>
        </tr>
        </tbody>
    </table>
    <a class="btn btn-outline-light" href="{{ path('book_index') }}">Back to the list</a>
    <a class="btn btn-outline-light" href="{{ path('book_edit', { 'id': book.id }) }}">Edit</a>
    <div class="mt-2">
        {% include 'book/_delete.html.twig' %}
    </div>
{% endblock %}

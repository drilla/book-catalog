{% extends 'base.html.twig' %}

{% block body %}
    <h1>Book</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ book.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ book.name }}</td>
            </tr>
            <tr>
                <th>Publicationdate</th>
                <td>{{ book.publicationDate|date('Y-m-d') }}</td>
            </tr>
            <tr>
                <th>Catalogdate</th>
                <td>{{ book.catalogDate|date('Y-m-d') }}</td>
            </tr>
            <tr>
                <th>Rating</th>
                <td>{{ book.rating }}</td>
            </tr>
            <tr>
                <th>Genre</th>
                <td>{{ book.genre.name }}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>{{ book.author.name }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('book_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('book_edit', { 'id': book.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}

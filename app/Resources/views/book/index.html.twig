{% extends 'layout/base.html.twig' %}

{% block content %}
    <div class="container">

        <h1>Books list</h1>
        <a class="btn btn-dark" href="{{ path('book_new') }}">Create a new book</a>
        <table class="table-dark">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Name</th>
                    <th scope="col">Publicationdate</th>
                    <th scope="col">Catalogdate</th>
                    <th scope="col">Rating</th>
                    <th scope="col">Genre</th>
                    <th scope="col">Author</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for book in books %}
                <tr>
                    <td><a href="{{ path('book_show', { 'id': book.id }) }}">{{ book.id }}</a></td>
                    <td>{{ book.name }}</td>
                    <td>{% if book.publicationDate %}{{ book.publicationDate|date('Y-m-d') }}{% endif %}</td>
                    <td>{% if book.catalogDate %}{{ book.catalogDate|date('Y-m-d') }}{% endif %}</td>
                    <td>{{ book.rating }}</td>
                    <td>{{ book.genre.name }}</td>
                    <td>{{ book.author.name }}</td>
                    <td>
                        <ul>
                            <li>
                                <a href="{{ path('book_show', { 'id': book.id }) }}">show</a>
                            </li>
                            <li>
                                <a href="{{ path('book_edit', { 'id': book.id }) }}">edit</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

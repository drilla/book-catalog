{% extends 'layout/base.html.twig' %}
{% block content %}
    <h1>Genres list</h1>
    <a class="btn btn-outline-light mb-2" href="{{ path('genre_new') }}">Create a new genre</a>
    <table class="table table-dark">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                <th>Actions</th>
            {% endif %}
        </tr>
        </thead>
        <tbody>
        {% for genre in genres %}
            <tr>
                <td><a href="{{ path('genre_show', { 'id': genre.id }) }}">{{ genre.id }}</a></td>
                <td><a href="{{ url('book_index', {'genre' : genre.id}) }}" class="">{{ genre.name }}</a></td>
                {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                    <td>
                        <a class="btn btn-sm btn-outline-light" href="{{ path('genre_show', { 'id': genre.id }) }}">show</a>
                        <a class="btn btn-sm btn-outline-light" href="{{ path('genre_edit', { 'id': genre.id }) }}">edit</a>
                    </td>
                {% endif %}
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

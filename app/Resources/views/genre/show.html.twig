{% extends 'layout/base.html.twig' %}
{% block content %}
    <h1>Genre</h1>

    <table class="table table-dark">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ genre.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ genre.name }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-outline-light mb-2" href="{{ path('genre_index') }}">Back to the list</a>
    <a class="btn btn-outline-light mb-2" href="{{ path('genre_edit', { 'id': genre.id }) }}">Edit</a>
    {% include 'genre/_delete.html.twig' %}

{% endblock %}
